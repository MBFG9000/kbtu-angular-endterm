{
  "$schema": "./node_modules/@angular/service-worker/config/schema.json",
  "index": "/index.html",
  "assetGroups": [
    {
      "name": "app",
      "installMode": "prefetch",
      "resources": {
        "files": [
          "/favicon.ico",
          "/index.csr.html",
          "/index.html",
          "/manifest.webmanifest",
          "/*.css",
          "/*.js"
        ]
      }
    },
    {
      "name": "assets",
      "installMode": "lazy",
      "updateMode": "prefetch",
      "resources": {
        "files": [
          "/**/*.(svg|cur|jpg|jpeg|png|apng|webp|avif|gif|otf|ttf|woff|woff2)"
        ]
      }
    },
    {
      "name": "icons",
      "installMode": "lazy",
      "updateMode": "prefetch",
      "resources": {
        "files": [ "/icons/**" ]
      }
    }
  ],
  "dataGroups": [
    {
      "name": "jikan-api",
      "urls": [
        "https://api.jikan.moe/v4/top/**",
        "https://api.jikan.moe/v4/anime/**",
        "https://api.jikan.moe/v4/**"
      ],
      "cacheConfig": {
        "maxSize": 200,
        "maxAge": "1d",
        "strategy": "freshness",
        "timeout": "3000"
      }
    }
  ]
}
